; vim: ft=dosini
; Built from scratch, but heavily inspired by default config

[colors]

[bar/base]
monitor-strict = true
fixed-center = true

width = 100%
height = 45
padding-right = 2
padding-top = 1

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = Fira Mono:size=14;0
font-1 = Noto Sans Mono:size=14;0
font-2 = FontAwesome:size=14;0
font-3 = Wuncon Siji:size=34;0

[bar/top]
inherit = bar/base
bottom = false

[bar/bottom]
inherit = bar/base
bottom = false
