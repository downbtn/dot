bindsym $mod+Shift+y exec --no-startup-id ~/.config/i3/lock.sh

# Window minimize/scratchpad bindings
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# Media keys
bindsym XF86MonBrightnessDown exec --no-startup-id light -U 1            # brightness down
bindsym XF86MonBrightnessUp exec --no-startup-id light -A 1              # brightness up
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset Master 2%+ # volume up
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset Master 2%- # volume down
bindsym XF86AudioMute exec --no-startup-id amixer -D pulse -q sset Master toggle     # volume mute
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause          # play music
bindsym XF86AudioNext exec --no-startup-id playerctl next                # next track
bindsym XF86AudioPrev exec --no-startup-id playerctl previous            # previous track
# Screenshots with scrot
bindsym --release Control+Print exec flameshot full

# OSX-like area selection screenshots
bindsym --release Control+Shift+Print exec flameshot gui
